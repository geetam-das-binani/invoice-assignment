<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">InvoiceGen</a>

          <div class="d-flex">
            <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- invoice -->
    <div class="container mt-5 form-container">
      <h2>Invoice Generator with GST</h2>
       <form  id="invoice-form" action="/create-invoice" method="post">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="your-company" class="form-label">Your Company</label>
              <input
                type="text"
                class="form-control"
                id="your-company"
                required
                name="companyName"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="your-name" class="form-label">Your Name</label>
              <input type="text" class="form-control" id="your-name" required name="yourName"/>
            </div>
          </div>
        </div>
  
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="company-gstin" class="form-label"
                >Company's GSTIN</label
              >
              <input
                type="text"
                class="form-control"
                id="company-gstin"
                required
                name="companyGstin"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="company-address" class="form-label"
                >Companyâ€™s Address</label
              >
              <input
                type="text"
                class="form-control"
                id="company-address"
                required
                name="companyAddress"
              />
            </div>
          </div>
        </div>
  
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="city" class="form-label">City</label>
              <input name="city" type="text" class="form-control" id="city" required />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="state" class="form-label">State</label>
              <input name="state" type="text" class="form-control" id="state" required />
            </div>
          </div>
        </div>
  
        <div class="mb-3">
          <label for="place-of-supply" class="form-label">Place Of Supply</label>
          <input name="placeOfSupply" type="text" class="form-control" id="place-of-supply" required />
        </div>
  
        <!-- Bill To: -->
        <h4 class="mt-4">Bill To:</h4>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="client-company" class="form-label"
                >Client's Company</label
              >
              <input
                type="text"
                class="form-control"
                id="client-company"
                required
                name="clientCompany"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="client-gstin" class="form-label">Client's GSTIN</label>
              <input
                type="text"
                class="form-control"
                id="client-gstin"
                required
                name="clientGstin"
              />
            </div>
          </div>
        </div>
  
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="client-address" class="form-label"
                >Client's Address</label
              >
              <input
                type="text"
                class="form-control"
                id="client-address"
                required
                name="clientAddress"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="client-city" class="form-label">Client's City</label>
              <input name="clientCity" type="text" class="form-control" id="client-city" required />
            </div>
          </div>
        </div>
  
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="client-state" class="form-label">Client's State</label>
              <input
                type="text"
                class="form-control"
                id="client-state"
                required
                name="clientState"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="invoice-number" class="form-label">Invoice #</label>
              <input required name="invoiceNumber" type="text" class="form-control" id="invoice-number" />
            </div>
          </div>
        </div>
  
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="invoice-date" class="form-label">Invoice Date</label>
              <input required name="invoiceDate" type="date" class="form-control" id="invoice-date" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="due-date" class="form-label">Due Date</label>
              <input required name="dueDate" type="date" class="form-control" id="due-date" />
            </div>
          </div>
        </div>
  
       </form>
      <!-- Your Company Details -->
     
      <!-- Product Details -->
      <h4 class="mt-4">Product Details:</h4>
      <form action="/create-update-product/<%= id || "" %>" method="post" id="invoice-form">
        <div class="mb-3">
          <label for="product-name" class="form-label">Product Name</label>
          <input
            value="<%= product && product.name ? product.name : "" %>"
            name="productName"
            type="text"
            class="form-control"
            id="product-name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="quantity" class="form-label">Quantity</label>
          <input
            value="<%= product && product.quantity ? product.quantity : "" %>"
            name="quantity"
            type="number"
            class="form-control"
            id="quantity"
            required
          />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            value="<%= product && product.price ? product.price : "" %>"
            name="price"
            type="number"
            class="form-control"
            id="price"
            required
          />
        </div>
        <div class="mb-3">
          <label for="gst" class="form-label">GST Rate (%)</label>
          <select name="gst" class="form-control" id="gst" required>
            <option value="0" <%= product && product.gst == 0 ? "selected" : "" %>>0%</option>
            <option value="5" <%= product && product.gst == 5 ? "selected" : "" %>>5%</option>
            <option value="12" <%= product && product.gst == 12 ? "selected" : "" %>>12%</option>
            <option value="18" <%= product && product.gst == 18 ? "selected" : "" %>>18%</option>
            <option value="28" <%= product && product.gst == 28 ? "selected" : "" %>>28%</option>
          </select>
        </div>
      
        <button id="add-product" type="submit" class="btn btn-primary">
          <%= id ? "Update Product" : "Add Product" %>
        </button>
      </form>
      

      <!-- Product Table -->
      <table class="table mt-5">
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>GST Rate</th>
            <th>Total Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="product-list">
          <% if(products.length > 0){ %>
            <% products.forEach(product=>{ %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.quantity %></td>
                <td><%= product.price %></td>
                <td><%= product.gst %>%</td>
                <td><%= product.total %></td>
                <td>
                  <form action="/delete-product/<%= product._id %>" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                  <% if (product._id != id ) { %>
                    <form action="/edit-product/<%= product._id %>" method="post" style="display: inline;">
                      <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    </form>
                  <% } %>
                </td>
                
              </tr>
              <%}); %>
         <% } %>
        </tbody>
      </table>

      <div id="total-amount" class="mt-3">
        <strong>Total Amount: </strong><span id="total-price"><%= totalAmount %></span>
      </div>

      <button class="btn btn-success mt-3" id="generate-pdf">
        Generate PDF
      </button>
  </body>
  <script>

const generatePdfButton = document.getElementById("generate-pdf");
generatePdfButton.addEventListener("click",  ()=> {
  console.log("clicked");
  const invoiceForm=document.getElementById("invoice-form");
  invoiceForm.submit();
});
  </script>
</html>
